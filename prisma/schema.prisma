generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @unique
  email String @unique
  password String
  psots Post[]
}

model Post {
  id String @id @unique
  user User @relation(fields: [userId], references: [id]) 
  userId String
  postedAt DateTime @default(now())
  text String
  reply String?
  rePost String?
  good String?
  analytics Int @default(0)
}

model Good {
  id Int @id @default(autoincrement())
  userId String
}
